# ===== build =====
FROM maven:3.9.9-eclipse-temurin-17 AS build
WORKDIR /workspace
COPY pom.xml .
COPY src ./src
# si Spring Boot, le jar repackage est déjà géré par le plugin
RUN mvn -B -e -U clean package -DskipTests

# ===== runtime =====
FROM eclipse-temurin:17-jre
WORKDIR /app
COPY --from=build /workspace/target/*.jar app.jar
EXPOSE 8080
ENTRYPOINT ["java","-jar","/app/app.jar"]
